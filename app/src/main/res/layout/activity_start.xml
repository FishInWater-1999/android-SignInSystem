<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joker.signinsystem.activities.StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/start_background" />

    <TextView
        android:id="@+id/tv_regist"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="没有账户？/注册"
        android:textColor="@color/grey" />

    <RadioButton
        android:id="@+id/radio_button"
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="记住密码?"
        android:textColor="@color/grey" />

    <Button
        android:id="@+id/login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:background="@drawable/shape_button"
        android:text="账号登录"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/monile_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/shape_button"
        android:textSize="15sp"
        android:text="手机登录" />

    <EditText
        android:id="@+id/et_login_user"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="191dp"
        android:hint="用户名"
        android:textColor="@color/white"
        android:textColorHint="#bfffffff" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_user"
        android:layout_centerHorizontal="true"
        android:password="true"
        android:layout_marginTop="-191dp"
        android:hint="密码"
        android:textColor="@color/white"
        android:textColorHint="#bfffffff" />


</RelativeLayout>
